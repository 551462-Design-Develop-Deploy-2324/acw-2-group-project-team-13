@page "/home/{RestId:int}"
@rendermode InteractiveServer
@using Db;
@inject NavigationManager nav;

<PageTitle>Home</PageTitle>


<div class="home-container">

    <div id="title">
        <h1>
            @restaurant.RestaurantName
        </h1>
    </div>


    <button @onclick="@ToOrders_Main">Orders</button>
    <p></p>
    <button @onclick="@ToMenu_Main">Menu</button>

</div>

@code {
    [Parameter]
    public int RestId { get; set; }

    Database database = new Database();
    Restaurant restaurant;
    protected override void OnInitialized()
    {
        database.ImportData();
        database.AssingData();
        restaurant = new Restaurant(0, "Foodie's Delight", "45C Beverley Street, HU13", "05913487966", 0);
    }
    

    void ToOrders_Main()
    {
        nav.NavigateTo("/orders");
    }
    void ToMenu_Main()
    {
        nav.NavigateTo("/menus");
    }
}
