@page "/customercheckout/{orderId:int}"
@rendermode InteractiveServer
@inject NavigationManager nav
@inject IJSRuntime JSRuntime
@using Db


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Delivery Checkout</title>
    <!--map using leaflet-->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css">
    <link rel="stylesheet" href="customercheckout.css">
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>


</head>


<div class="container">
    <h1>Checkout</h1>

    <form id="checkoutForm">
        <div class="form-group">
            <input type="text" id="name" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
            <input type="email" id="email" name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <input type="tel" id="phone" name="phone" placeholder="Phone Number" required>
        </div>
        <div class="form-group">
            <textarea id="address" name="address" rows="3" placeholder="Address" required></textarea>
        </div>

        <div class="form-group">
            <!-- Map container -->
            <div id="map" style="height: 200px;"></div>
            <!-- Initialize the map with Leaflet -->
            <script>
                var map = L.map('map').setView([53.73986685736403, -0.3360633876605051], 12);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
            </script>
        </div>
        <div class="form-group">
            <label for="paymentMethod">Payment Method</label>
        </div>

        <button type="submit">Place Order</button>
    </form>
</div>


@code{
    [Parameter]
    public int orderId { get; set; }

    Database database = new Database();
     protected override void OnInitialized()
    {
        database.ImportData();
        database.AssingData();
    }
}