@page "/customercheckout/{customerId:int}/{orderId:int}"

<div class="container">
    <h1>Checkout</h1>

    <form id="checkoutForm">
        <div class="form-group">
            <input type="text" id="name" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
            <input type="email" id="email" name="email" placeholder="Email" required>
        </div>
        <div class="form-group">
            <input type="tel" id="phone" name="phone" placeholder="Phone Number" required>
        </div>
        <div class="form-group">
            <textarea id="address" name="address" rows="3" placeholder="Address" required></textarea>
        </div>

        <div class="form-group">
            <!-- Map container -->
            <div id="map" style="height: 200px;"></div>
            <!-- Initialize the map with Leaflet -->
            <script>
                var map = L.map('map').setView([53.73986685736403, -0.3360633876605051], 12);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
            </script>
        </div>
        <div class="form-group">
            <label for="paymentMethod">Payment Method</label>

            <div class="row">
                <div class="column">
                    <img src="C:\Users\747026\OneDrive - hull.ac.uk\ddd\ddd\klarna.png" alt="Snow" style="width:100%" onclick="toggleBorder(this)">
                </div>
                <div class="column">
                    <img src="C:\Users\747026\OneDrive - hull.ac.uk\ddd\ddd\visa.png" alt="Forest" style="width:100%" onclick="toggleBorder(this)">
                </div>
                <div class="column">
                    <img src="C:\Users\747026\OneDrive - hull.ac.uk\ddd\ddd\mastercard.png" alt="Mountains" style="width:100%" onclick="toggleBorder(this)">
                </div>
                <div class="column">
                    <img src="C:\Users\747026\OneDrive - hull.ac.uk\ddd\ddd\apay.png" alt="Snow" style="width:100%" onclick="toggleBorder(this)">
                </div>
            </div>
        </div>

        <button type="submit">Place Order</button>
    </form>
</div>
@code {
    [Parameter]
    public int customerId { get; set; }
    [Parameter]
    public int orderId{ get; set; }
}
